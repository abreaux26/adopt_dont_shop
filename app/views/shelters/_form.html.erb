<%= form_with url: path, method: method, local: true do |form|%>
  <h3><%= form.label header_label %></h3>
  <p><%= form.label "Name: " %></p>
  <p><%= form.text_field :name %></p>
  <p><%= form.label "Address: " %></p>
  <p><%= form.text_field :address %></p>
  <p><%= form.label "City: " %></p>
  <p><%= form.text_field :city %></p>
  <p><%= form.label "State: " %></p>
  <p><%= form.text_field :state %></p>
  <p><%= form.label "Zip: " %></p>
  <p><%= form.text_field :zip %></p>
  <%= form.submit button_text %>
<% end %>
