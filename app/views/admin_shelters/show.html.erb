<h2><%= @shelter_information.name %></h2>
<h2><%= @shelter_information.full_address %></h2>
<section class='statistics'>
  <h3>Statistics:</h3>
  <p>Average Adoptable Pet Age: <%= @shelter.average_age %></p>
  <p>Count of Adoptable Pets: <%= @shelter.adoptable_pet_count %></p>
  <p>Count of Adopted Pets: <%= @shelter.adopted_pet_count %></p>
</section>
<section class='action-required'>
  <h3>Action Required</h3>
  <% @shelter.action_required_pets.each do |pet| %>
  <p><%= pet.name %>
    <% pet.applicants.pending.each do |applicant| %>
      <%= link_to "Go to Application", "/admin/applicants/#{applicant.id}" %></p>
    <% end %>
  <% end %>
</section>
