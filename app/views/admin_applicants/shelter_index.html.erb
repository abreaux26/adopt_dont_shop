<h1>Shelters</h1><hr>
<% @shelters.each do |shelter| %>
  <section id="shelter-<%=shelter.id%>">
    <h3><%= link_to "#{shelter.name}", "/admin/shelters/#{shelter.id}" %></h3>
  </section>
<% end %>
<section class="pending-applicants">
  <h1>Shelters with Pending Applications:</h1>
  <% if @pending_applicants %>
    <%  @pending_applicants.each do |shelter| %>
      <p><%= shelter.name %><p>
    <% end %>
  <% end %>
</section>
