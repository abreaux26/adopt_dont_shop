<%= form_with url: path, method: method, local: true do |form|%>
  <h3><%= form.label header_label %></h3>
  <p><%= form.label "Name: " %></p>
  <p><%= form.text_field :name, placeholder: "Jane Doe", value: type.name %></p>
  <p><%= form.label "Address: " %></p>
  <p><%= form.text_field :address, placeholder: "123 Street", value: type.address %></p>
  <p><%= form.label "City: " %></p>
  <p><%= form.text_field :city, placeholder: "Conway", value: type.city %></p>
  <p><%= form.label "State: " %></p>
  <p><%= form.text_field :state, placeholder: "AR", maxlength: 2, value:type.state %></p>
  <p><%= form.label "Zip: " %></p>
  <p><%= form.text_field :zip, placeholder: "72034", maxlength: 5, value: type.zip %></p>
  <%= form.submit 'Submit' %>
<% end %>
