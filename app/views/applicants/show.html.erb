<section id="applicant-<%= @applicant.id %>">
  <h1><%= @applicant.name %></h1>
  <p><%= @applicant.full_address %></p>
  <p><%= @applicant.good_home_description %></p>
  <p><% @applicant.pets.each do |pet| %></p>
    <p><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></p>
  <% end %>
  <p><%= @applicant.status %></p>
</section>

<aside class="applicant-pet-search">
  <h4>Add a Pet to this Application</h4>
  <%= form_with url: "/applicants/#{@applicant.id}", method: :get, local: true do |form| %>
    <%= form.text_field :search %>
    <%= form.submit "Search" %>
  <% end %>
  <% if @pets %>
    <% @pets.each do |pet| %>
      <%= pet.name %>
      <%= button_to "Adopt this Pet", "/applicants/#{@applicant.id}?adopt_pet_id=#{pet.id}" %>
    <% end %>
  <% end %>
</aside>
